<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c2dcef"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#c2dcef">

        <FrameLayout
            android:id="@+id/click"
            android:layout_width="340dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_write">

            <TextView
                android:id="@+id/content"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="内容"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:text="2017-8-17 17:35:22" />

            <TextView
                android:id="@+id/title"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="标题"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="作者"
                android:textColor="#000" />

            <TextView
                android:id="@+id/see"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="已查看"
                android:textColor="@color/blue" />

            <ImageView
                android:id="@+id/headphoto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right|top"
                android:src="@drawable/appinfo" />

        </FrameLayout>

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/item_right"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="#c2dcef" >

        <TextView
            android:id="@+id/item_right_txt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/del_icon_normal"
            android:gravity="center"
            android:text="  "
            android:textColor="#333333" />
    </RelativeLayout>


</LinearLayout>